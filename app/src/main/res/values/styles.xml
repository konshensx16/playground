    <!-- Light base activity theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">

        <item name="primaryBackgroundColor">@color/light_primaryBackgroundColor</item>
        <item name="secondaryBackgroundColor">@color/light_secondaryBackgroundColor</item>
        <item name="primaryTextColor">@color/light_primaryTextColor</item>
        <item name="secondaryTextColor">@color/light_secondaryTextColor</item>
        <item name="accentColor">@color/light_accentColor</item>

        <!-- styles for the card_item -->
        <item name="cardBackgroundColor">@color/light_primaryBackgroundColor</item>
        <item name="cardBorderColor">@color/light_primaryBackgroundColor</item>
        <item name="cardPrimaryTextColor">@color/light_primaryTextColor</item>
        <item name="cardSecondaryTextColor">@color/light_secondaryTextColor</item>
        <item name="cardAccentTextColor">@color/light_accentColor</item>

        <!-- currency details background image -->
        <item name="currency_details_background_image">@drawable/details_light</item>

    </style>

    <!-- Dark base activity theme -->
    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">

        <item name="primaryBackgroundColor">@color/dark_primaryBackgroundColor</item>
        <item name="secondaryBackgroundColor">@color/dark_secondaryBackgroundColor</item>
        <item name="primaryTextColor">@color/dark_primaryTextColor</item>
        <item name="secondaryTextColor">@color/dark_secondaryTextColor</item>
        <item name="accentColor">@color/dark_accentColor</item>

        <!-- styles for the card_item -->
        <item name="cardBackgroundColor">@color/dark_primaryBackgroundColor</item>
        <item name="cardBorderColor">@color/dark_primaryBackgroundColor</item>
        <item name="cardPrimaryTextColor">@color/dark_primaryTextColor</item>
        <item name="cardSecondaryTextColor">@color/dark_secondaryTextColor</item>
        <item name="cardAccentTextColor">@color/dark_accentColor</item>


        <!-- currency details background image -->
        <item name="currency_details_background_image">@drawable/details_dark</item>
    </style>

</resources>
